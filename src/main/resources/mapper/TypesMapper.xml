<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.TypesMapper">

    <!-- 定义ResultMap -->
    <resultMap id="TypesResultMap" type="com.example.demo.entity.Types">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
    </resultMap>

    <!-- 查询单条记录 -->
    <select id="selectById" resultMap="TypesResultMap">
        SELECT id, title
        FROM types
        WHERE id = #{id}
    </select>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.example.demo.entity.Types">
        INSERT INTO types (title)
        VALUES (#{title})
    </insert>

    <!-- 更新记录 -->
    <update id="update" parameterType="com.example.demo.entity.Types">
        UPDATE types
        SET title = #{title}
        WHERE id = #{id}
    </update>

    <!-- 删除记录 -->
    <delete id="deleteById">
        DELETE FROM types
        WHERE id = #{id}
    </delete>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="TypesResultMap">
        SELECT id, title
        FROM types
    </select>
</mapper>
