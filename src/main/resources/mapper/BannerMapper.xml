<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.BannerMapper">

    <!-- 定义ResultMap -->
    <resultMap id="BannerResultMap" type="com.example.demo.entity.Banner">
        <id property="id" column="id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="linkUrl" column="link_url"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <!-- 查询单条记录 -->
    <select id="selectById" resultMap="BannerResultMap">
        SELECT id, image_url, link_url, sort
        FROM banner
        WHERE id = #{id}
    </select>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.example.demo.entity.Banner">
        INSERT INTO banner (image_url, link_url, sort)
        VALUES (#{imageUrl}, #{linkUrl}, #{sort})
    </insert>

    <!-- 更新记录 -->
    <update id="update" parameterType="com.example.demo.entity.Banner">
        UPDATE banner
        SET image_url = #{imageUrl},
            link_url = #{linkUrl},
            sort = #{sort}
        WHERE id = #{id}
    </update>

    <!-- 删除记录 -->
    <delete id="deleteById">
        DELETE FROM banner
        WHERE id = #{id}
    </delete>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BannerResultMap">
        SELECT id, image_url, link_url, sort
        FROM banner
        ORDER BY sort ASC
    </select>
</mapper>
