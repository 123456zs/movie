<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.AuthorityMapper">

    <!-- 定义ResultMap -->
    <resultMap id="AuthorityResultMap" type="com.example.demo.entity.Authority">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="statue" column="statue"/>
    </resultMap>

    <!-- 查询单条记录 -->
    <select id="selectById" resultMap="AuthorityResultMap">
        SELECT id, name, description, statue
        FROM authorities
        WHERE id = #{id}
    </select>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.example.demo.entity.Authority">
        INSERT INTO authorities (name, description, statue)
        VALUES (#{name}, #{description}, #{statue})
    </insert>

    <!-- 更新记录 -->
    <update id="update" parameterType="com.example.demo.entity.Authority">
        UPDATE authorities
        SET name = #{name},
            description = #{description},
            statue = #{statue}
        WHERE id = #{id}
    </update>

    <!-- 删除记录 -->
    <delete id="deleteById">
        DELETE FROM authorities
        WHERE id = #{id}
    </delete>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="AuthorityResultMap">
        SELECT id, name, description, statue
        FROM authorities
    </select>
</mapper>
