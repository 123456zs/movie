<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.FavoritesMapper">

    <!-- 定义ResultMap -->
    <resultMap id="FavoritesResultMap" type="com.example.demo.entity.Favorites">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="movieId" column="movie_id"/>
        <result property="title" column="title"/>
        <result property="note" column="note"/>
        <result property="favorites_date" column="favorites_date"/>
    </resultMap>

    <!-- 查询单条记录 -->
    <select id="selectById" resultMap="FavoritesResultMap">
        SELECT id, user_id, movie_id, title, note, favorites_date
        FROM favorites
        WHERE id = #{id}
    </select>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.example.demo.entity.Favorites">
        INSERT INTO favorites (user_id, movie_id, title, note, favorites_date)
        VALUES (#{userId}, #{movieId}, #{title}, #{note}, #{favorites_date})
    </insert>

    <!-- 更新记录 -->
    <update id="update" parameterType="com.example.demo.entity.Favorites">
        UPDATE favorites
        SET user_id = #{userId},
            movie_id = #{movieId},
            title = #{title},
            note = #{note},
            favorites_date = #{favorites_date}
        WHERE id = #{id}
    </update>

    <!-- 删除记录 -->
    <delete id="deleteById">
        DELETE FROM favorites
        WHERE id = #{id}
    </delete>

    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="FavoritesResultMap">
        SELECT id, user_id, movie_id, title, note, favorites_date
        FROM favorites
    </select>
</mapper>
